datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  first_name  String
  last_name   String
  profile_pic String?
  bio         String  @default("")

  enrolled_courses  Course[] @relation("Enrolled")
  completed_courses Course[] @relation("Completed")

  badgesCreated Badge[] @relation("Created")
  badgesEarned  Badge[] @relation("Earned")

  program     Program          @relation(fields: [programId], references: [id])
  programId   Int
  standindg   StudentStanding?
  accountType UserType         @default(STUDENT)

  passwordHash String?
}

enum StudentStanding {
  FRESHMAN
  SOPHOMORE
  JUNIOR
  SENIOR
}

enum UserType {
  STUDENT
  PROFESSOR
  ADMIN
}

model Program {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  User User[]
}

model Badge {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name        String
  picture_url String
  description String

  users User[] @relation("Earned")

  created_by  User   @relation(name: "Created", fields: [createdById], references: [id])
  createdById String
}

model Course {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name        String
  description String

  enrolled_users  User[] @relation("Enrolled")
  completed_users User[] @relation("Completed")
}
